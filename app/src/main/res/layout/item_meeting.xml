<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:id="@+id/llCardBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvMeetingName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="약속 이름"
            android:textColor="@color/meetlygray1"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvMeetingDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="2025-06-15"
            android:textColor="@color/meetlygray1"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvMeetingPlace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="장소: 서울시 강남구"
            android:textColor="@color/meetlygray1"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/llMemberImages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
